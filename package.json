{
  "name": "stone-stronger-artvenue",
  "version": "1.0.0",
  "description": "Custom printing services website - Modern, responsive, and production-ready",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server -p 8000 -o",
    "dev": "npx http-server -p 8000 -o -c-1",
    "build": "echo 'No build step required for static site'",
    "serve": "npx serve .",
    "format": "npx prettier --write \"**/*.{html,css,js,md}\"",
    "lint:css": "npx stylelint \"**/*.css\"",
    "lint:js": "npx eslint \"**/*.js\"",
    "validate": "npx html-validate index.html",
    "lighthouse": "npx lighthouse http://localhost:8000 --view",
    "deploy:netlify": "netlify deploy --prod",
    "deploy:vercel": "vercel --prod"
  },
  "keywords": [
    "custom-printing",
    "t-shirts",
    "mugs",
    "jerseys",
    "website",
    "responsive",
    "dark-mode",
    "tailwind",
    "vanilla-js"
  ],
  "author": "Stone Stronger Artvenue",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/stone-stronger-artvenue.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/stone-stronger-artvenue/issues"
  },
  "homepage": "https://yourwebsite.com",
  "devDependencies": {
    "http-server": "^14.1.1",
    "prettier": "^3.0.0",
    "stylelint": "^15.0.0",
    "eslint": "^8.0.0",
    "lighthouse": "^11.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead"
  ]
}








